<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://www.springframework.org/schema/security
						http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http auto-config="true">
		<intercept-url pattern="/computer/add" access="ROLE_ADMIN" />
		<intercept-url pattern="/computer/submit" access="ROLE_ADMIN" />
		<intercept-url pattern="/computer/del" access="ROLE_ADMIN" />
		<logout logout-success-url="/dashboard" />
		<http-basic />
	</http>

	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="sha-256" />
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select username,password, enabled from users where username=?"
				authorities-by-username-query="select username, role from user_roles inner join roles on user_roles.role_id=roles.role_id where username =?  " />
		</authentication-provider>
	</authentication-manager>
</beans:beans>